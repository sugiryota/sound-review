<header class="top-page-header">
      <div class="search-bar-contents">
        <%= link_to image_tag("soundreview.png", class:"top-icon"), "/" %>
        <form class="search-form" action="#">
          <input class='input-box' placeholder='キーワードから探す'>
          <button class="search-button">
            <%= link_to image_tag("search.png", class:"search-icon"), "/" %>
          </button>
        </form>
      </div>
      <div class='nav'>
        <ul class='lists-right'>
          <% if user_signed_in? %>
          <div class="user_nav grid-6">
            <div class="profile">
              <% if current_user.image.attached? %>
                <%= image_tag current_user.image, class: "user-icon" %>
              <% else %>
                <%= image_tag "soundreview2.png", alt: "user-icon", size: "200", class: "user-icon" %>
              <% end %>
            </div>
            <div class="right-head">
              <%= link_to current_user.nickname, "#", class: "post" %>
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete ,class:"post" %>
            </div>
          </div>
          <% else %>
          <div class="user_sign grid-6">
            <%= link_to "ログイン", new_user_session_path, class: "post" %>
            <%= link_to "新規登録", new_user_registration_path, class: "post" %>
          </div>
          <% end %>
        </ul>
      </div>
</header>